{
  "manifest_version": 3,
  "name": "PDF Math Translate",
  "version": "1.0.0",
  "description": "PDFを日本語に翻訳してブラウザで表示",
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://arxiv.org/*",
    "https://*.arxiv.org/*",
    "*://*/pdf/*",
    "*://*/*.pdf"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://arxiv.org/*",
        "https://*.arxiv.org/*",
        "*://*/pdf/*",
        "*://*/*.pdf"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "PDF Math Translate - PDFを日本語に翻訳",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.jpg", "*.gif"],
      "matches": ["<all_urls>"]
    }
  ]
}